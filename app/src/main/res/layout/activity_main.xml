<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jurtz.marcel.shoppinglist.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llNewShoppingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtAddNewShoppingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/txt_add_shopping_list_hint"/>

            <Button
                android:id="@+id/cmdAddNewShoppingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/cmd_add_shopping_list_text"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvShoppingLists"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/llNewShoppingList"
            android:layout_margin="8dp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddNewShoppingList"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="@color/colorPrimary"
        app:layout_anchorGravity="right|bottom"
        app:layout_anchor="@+id/rvShoppingLists" />

</android.support.design.widget.CoordinatorLayout >